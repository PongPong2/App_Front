<resources>

    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    </style>

    <style name="Theme.MyApplication.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    </style>

    <style name="Theme.MyApp.MySplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>

        <item name="windowSplashScreenAnimatedIcon">@drawable/dasom</item>

        <item name="postSplashScreenTheme">@style/Theme.MyApp</item>
    </style>

    <style name="Theme.AppBase" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    </style>

    <style name="Theme.AppBase.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/dasom</item>
        <item name="postSplashScreenTheme">@style/Theme.AppBase.NoActionBar</item>
    </style>

</resources>