<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp"
        tools:context=".activity.LoginActivity">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginBottom="40dp"
            android:adjustViewBounds="true"
            android:contentDescription="앱 로고"
            android:src="@drawable/title_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dasomfont"
            android:gravity="center"
            android:padding="10dp"
            android:text="AI·IoT와 생체 데이터를 통한 건강 모니터링 플랫폼"
            android:textColor="#333333"
            android:textSize="15sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="아이디를 입력해주세요."
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxStrokeColor="@android:color/transparent">

            <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dasomfont"
            android:inputType="text"
            android:singleLine="true"
            android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="비밀번호를 입력해주세요."
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:passwordToggleEnabled="true"
            app:boxStrokeColor="@android:color/transparent">

            <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dasomfont"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <CheckBox
                android:id="@+id/check_auto_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/dasomfont"
                android:text="자동로그인"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_find_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/dasomfont"
                android:text="아이디/비밀번호 찾기"
                android:textColor="#0A1AFC"
                android:textStyle="bold" />
        </RelativeLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_kakao_login_material"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="@font/dasomfont"
            android:text="카카오로그인"
            android:textColor="#3C1E1E"
            android:textSize="18sp"
            android:textStyle="bold"
            android:stateListAnimator="@null"
            app:backgroundTint="#FFEB00"
            app:cornerRadius="20dp"
            app:icon="@drawable/kakaotalk_logo_style"
            app:iconGravity="textStart"
            app:iconPadding="5dp"
            app:iconTint="@null" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="@font/dasomfont"
            android:text="로그인"
            android:textColor="@android:color/black"
            android:stateListAnimator="@null"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#FFD899"
            app:cornerRadius="20dp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="@font/dasomfont"
            android:text="회원가입"
            android:textColor="@android:color/black"
            android:stateListAnimator="@null"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#FFD899"
            app:cornerRadius="20dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5" />

    </LinearLayout>
</ScrollView>